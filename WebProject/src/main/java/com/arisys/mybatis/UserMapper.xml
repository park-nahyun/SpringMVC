<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.arisys.mybatis.UserMapper">

    <sql id="userInfo">
        id,
        username,
        email
    </sql>

    <insert id="insert" parameterType="User">
        INSERT INTO user(
        <include refid="userInfo"/>
        )VALUES (
        #{id},
        #{username},
        #{email}
        )
    </insert>

    <select id="selectUserDetail" parameterType="Long" resultType="User">
        SELECT
        <include refid="userInfo"/>
        FROM
        user
        WHERE
        id = #{id};
    </select>

    <update id="updateUser" parameterType="User">
        UPDATE user
        SET
            email = #{email}
        WHERE
            id =#{id}
    </update>

    <update id="deleteUser">
        Delete user
        WHERE
            id = #{id}
    </update>

    <select id="selectUserList" parameterType="User" resultType="User">
        SELECT
        <include refid="userInfo"/>
        FROM
        user
    </select>

    <select id="selectUserToTalCount" parameterType="User" resultType="int">
        SELECT
            COUNT(*)
        FROM
            user
    </select>
</mapper>